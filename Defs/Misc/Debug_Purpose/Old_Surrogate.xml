		<skillRequirements>
			<Crafting>7</Crafting>
		</skillRequirements>
		<recipeUsers>
			<li>TableOrgans</li>
		</recipeUsers>
	</RecipeDef>

	<RecipeDef ParentName="RecipeSurrogateOrgan">
		<defName>CreateSurrogateHeart</defName>
		<label>make surrogate heart</label>
		<description>(Debug version of recipe when swapping from old EPOE to EPOE-forked to avoid workstation glitching. Can keep using as normal.)</description>
		<jobString>Creating surrogate organ.</jobString>
		<products>
			<SurrogateHeart>1</SurrogateHeart>
		</products>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Cloth</li>
					</thingDefs>
				</filter>
				<count>40</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Plasteel</li>
					</thingDefs>
				</filter>
				<count>25</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentIndustrial</li>
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Cloth</li>
				<li>Plasteel</li>
				<li>ComponentIndustrial</li>
			</thingDefs>
		</fixedIngredientFilter>
		<factionPrerequisiteTags>
			<li>EPOE_Redundancy_Debug</li>
		</factionPrerequisiteTags>
		<recipeUsers Inherit="False" />
	</RecipeDef>

