		<statBases>
			<Mass>0.3</Mass>
		</statBases>
	</ThingDef>

	<ThingDef ParentName="BodyPartBasicBase">
		<defName>HookHand</defName>
		<label>hook hand</label>
		<description>Replaces missing hands. Pretty scary. Yarr.</description>
		<statBases>
			<Mass>2</Mass>
		</statBases>
