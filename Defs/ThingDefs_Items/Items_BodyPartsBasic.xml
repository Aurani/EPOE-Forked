	<!-- Extended Vanilla body parts -->

	<ThingDef ParentName="BodyPartBasicBase">
		<defName>denture</defName>
		<label>denture</label>
		<description>Replaces a missing jaw with wooden teeth. Smells a bit.</description>
		<recipeMaker>
			<workSpeedStat>SmithingSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<recipeUsers>
				<li>TableBasicProsthetic</li>
			</recipeUsers>
			<unfinishedThingDef>UnfinishedProsthesis</unfinishedThingDef>
			<soundWorking>Recipe_MakeWoodPlanks_Hand</soundWorking>
			<researchPrerequisite>BasicProsthetics</researchPrerequisite>
		</recipeMaker>
		<costList>
			<WoodLog>20</WoodLog>
		</costList>
		<statBases>
			<WorkToMake>2500</WorkToMake>
			<Mass>2</Mass>
		</statBases>
	</ThingDef>

	<ThingDef ParentName="BodyPartBasicBase">
		<defName>PegLeg</defName>
		<label>peg leg</label>
		<description>Replaces a missing leg with a wooden one. Out of fashion but it does its job pretty well.</description>
		<recipeMaker>
			<workSpeedStat>SmithingSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<recipeUsers>
				<li>TableBasicProsthetic</li>
			</recipeUsers>
			<unfinishedThingDef>UnfinishedProsthesis</unfinishedThingDef>
			<soundWorking>Recipe_MakeWoodPlanks_Hand</soundWorking>
			<researchPrerequisite>BasicProsthetics</researchPrerequisite>
		</recipeMaker>
		<costList>
			<WoodLog>50</WoodLog>
		</costList>
		<statBases>
			<WorkToMake>2500</WorkToMake>
			<Mass>6</Mass>
		</statBases>
	</ThingDef>

	<ThingDef ParentName="BodyPartBasicBase">
		<defName>WoodenFoot</defName>
		<label>wooden foot</label>
		<description>Replaces missing feet with a wooden log. At least it's more comfortable than hopping around.</description>
		<recipeMaker>
			<workSpeedStat>SmithingSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<recipeUsers>
				<li>TableBasicProsthetic</li>
			</recipeUsers>
			<unfinishedThingDef>UnfinishedProsthesis</unfinishedThingDef>
			<soundWorking>Recipe_MakeWoodPlanks_Hand</soundWorking>
			<researchPrerequisite>BasicProsthetics</researchPrerequisite>
		</recipeMaker>
		<costList>
			<WoodLog>15</WoodLog>
		</costList>
		<statBases>
			<WorkToMake>2500</WorkToMake>
			<Mass>2</Mass>
		</statBases>
	</ThingDef>

	<!-- New EPOE body parts -->
	
	<ThingDef ParentName="BodyPartBasicBase">
		<defName>SteelArm</defName>
		<label>steel arm</label>
