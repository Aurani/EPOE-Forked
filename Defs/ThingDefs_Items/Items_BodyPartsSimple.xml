	<ThingDef ParentName="BodyPartProstheticBase">
		<defName>SimpleProstheticLeg</defName>
		<label>simple prosthetic leg</label>
		<description>Simple prosthesis made to replace a missing leg. Not very comfortable but quite efficient.</description>
		<techLevel>Industrial</techLevel>
		<costList>
			<Steel>55</Steel>
			<Plasteel>25</Plasteel>
			<ComponentIndustrial>3</ComponentIndustrial>
		</costList>
		<statBases>
			<WorkToMake>5000</WorkToMake>
			<Mass>8</Mass>
		</statBases>
		<tradeTags>
			<li>SimpleProstheses</li>
		</tradeTags>
		<techHediffsTags>
			<li>Simple</li>
		</techHediffsTags>
	</ThingDef>

