<?xml version="1.0" encoding="UTF-8"?>

<Defs>

   <HediffDef Name="addedPartSynthetic" Abstract="True">
      <hediffClass>Hediff_AddedPart</hediffClass>
      <isBad>false</isBad>
      <defaultLabelColor>(188,39,242)</defaultLabelColor>
      <addedPartProps>
         <betterThanNatural>true</betterThanNatural>
         <solid>true</solid>
         <partEfficiency>1</partEfficiency>
      </addedPartProps>
   </HediffDef>

   <!-- Added body parts -->

   <HediffDef ParentName="addedPartSynthetic">
      <hediffClass>Hediff_Implant</hediffClass>
      <defName>AIChip</defName>
      <label>AI Chip</label>
	  <labelNoun>an AI chip </labelNoun>
      <spawnThingOnRemoved>AIChip</spawnThingOnRemoved>
	  <stages>
         <li>
            <capMods>
               <li>
                  <capacity>Consciousness</capacity>
                  <offset>1</offset>
               </li>
               <li>
                  <capacity>Consciousness</capacity>
                  <setMax>1</setMax>
               </li>
            </capMods>
         </li>
      </stages>
   </HediffDef>

   <HediffDef ParentName="addedPartSynthetic">
      <defName>AIPersonaCore</defName>
      <label>AI persona core</label>
	  <labelNoun>an AI persona core</labelNoun>
      <spawnThingOnRemoved>AIPersonaCore</spawnThingOnRemoved>
	  <comps>
	      <li Class="HediffCompProperties_HealPermanentWounds" />
      </comps>
      <stages>
         <li>
            <painFactor>1.5</painFactor>
            <restFallFactor>0.5</restFallFactor>
            <hungerRateFactor>1.5</hungerRateFactor>
            <capMods>
               <li>
                  <capacity>Consciousness</capacity>
                  <offset>0.50</offset>
               </li>
               <li>
                  <capacity>BloodFiltration</capacity>
                  <offset>0.20</offset>
               </li>
               <li>
                  <capacity>BloodPumping</capacity>
                  <offset>0.20</offset>
               </li>
            </capMods>
            <mentalStateGivers>
               <li>
                  <mentalState>BerserkCore</mentalState>
                  <mtbDays>25</mtbDays>
               </li>
               <li>
                  <mentalState>WanderConfusedCore</mentalState>
                  <mtbDays>13</mtbDays>
               </li>
            </mentalStateGivers>
         </li>
      </stages>
   </HediffDef>

   <HediffDef ParentName="addedPartSynthetic">
      <defName>SyntheticLung</defName>
      <label>synthetic lung</label>
	  <labelNoun>a synthetic lung</labelNoun>
      <spawnThingOnRemoved>SyntheticLung</spawnThingOnRemoved>
      <stages>
         <li>
            <capMods>
               <li>
                  <capacity>Breathing</capacity>
                  <offset>0.2</offset>
               </li>
               <li>
                  <capacity>Moving</capacity>
                  <offset>0.1</offset>
               </li>
            </capMods>
         </li>
      </stages>
   </HediffDef>

   <HediffDef ParentName="addedPartSynthetic">
      <defName>SyntheticStomach</defName>
      <label>synthetic stomach</label>
	  <labelNoun>a synthetic stomach</labelNoun>
      <spawnThingOnRemoved>SyntheticStomach</spawnThingOnRemoved>
      <stages>
         <li>
            <capMods>
               <li>
                  <capacity>Eating</capacity>
                  <offset>0.2</offset>
               </li>
            </capMods>
         </li>
      </stages>
   </HediffDef>

   <HediffDef ParentName="addedPartSynthetic">
      <defName>SyntheticLiver</defName>
      <label>synthetic liver</label>
	  <labelNoun>a synthetic liver</labelNoun>
      <spawnThingOnRemoved>SyntheticLiver</spawnThingOnRemoved>
      <stages>
         <li>
            <capMods>
               <li>
                  <capacity>BloodFiltration</capacity>
                  <offset>0.2</offset>
               </li>
            </capMods>
         </li>
      </stages>
   </HediffDef>

   <HediffDef ParentName="addedPartSynthetic">
      <defName>SyntheticKidney</defName>
      <label>synthetic kidney</label>
	  <labelNoun>a synthetic kidney</labelNoun>
      <spawnThingOnRemoved>SyntheticKidney</spawnThingOnRemoved>
      <stages>
         <li>
            <capMods>
               <li>
                  <capacity>BloodFiltration</capacity>
                  <offset>0.2</offset>
               </li>
            </capMods>
         </li>
      </stages>
   </HediffDef>

   <HediffDef ParentName="addedPartSynthetic">
      <defName>SyntheticHeart</defName>
      <label>synthetic heart</label>
	  <labelNoun>a synthetic heart</labelNoun>
      <spawnThingOnRemoved>SyntheticHeart</spawnThingOnRemoved>
      <stages>
         <li>
            <capMods>
               <li>
                  <capacity>BloodPumping</capacity>
                  <offset>0.2</offset>
               </li>
               <li>
                  <capacity>Moving</capacity>
                  <offset>0.1</offset>
               </li>
               <li>
                  <capacity>Manipulation</capacity>
                  <offset>0.1</offset>
               </li>
            </capMods>
         </li>
      </stages>
   </HediffDef>

</Defs>