<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<HediffDef Name="addedPartBasic" Abstract="True">
		<hediffClass>Hediff_AddedPart</hediffClass>
		<isBad>false</isBad>
		<defaultLabelColor>(148,117,14)</defaultLabelColor>
		<addedPartProps>
			<betterThanNatural>false</betterThanNatural>
		</addedPartProps>
	</HediffDef>

	<!-- Vanilla overwrites, for now. -->

	<HediffDef ParentName="addedPartBasic">
		<defName>Denture</defName>
		<label>denture</label>
		<labelNoun>a denture</labelNoun>
		<spawnThingOnRemoved>denture</spawnThingOnRemoved>
		<addedPartProps>
			<solid>true</solid>
			<partEfficiency>1.0</partEfficiency>
		</addedPartProps>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.4</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>-0.3</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

	<HediffDef ParentName="addedPartBasic">
		<defName>PegLeg</defName>
		<label>peg leg</label>
		<labelNoun>a peg leg</labelNoun>
		<spawnThingOnRemoved>PegLeg</spawnThingOnRemoved>
		<addedPartProps>
			<solid>true</solid>
			<partEfficiency>0.6</partEfficiency>
		</addedPartProps>
	</HediffDef>

	<HediffDef ParentName="addedPartBasic">
		<defName>WoodenFoot</defName>
		<label>wooden foot</label>
		<labelNoun>a wooden foot</labelNoun>
		<spawnThingOnRemoved>WoodenFoot</spawnThingOnRemoved>
		<addedPartProps>
			<solid>true</solid>
			<partEfficiency>0.6</partEfficiency>
		</addedPartProps>
	</HediffDef>

	<!-- New EPOE body parts -->

	<HediffDef ParentName="addedPartBasic">
		<defName>SteelArm</defName>
		<label>steel arm</label>
		<labelNoun>a steel arm</labelNoun>
		<spawnThingOnRemoved>SteelArm</spawnThingOnRemoved>
		<addedPartProps>
			<solid>true</solid>
			<partEfficiency>0.6</partEfficiency>
		</addedPartProps>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>steel fist</label>
						<capacities>
							<li>Blunt</li>
						</capacities>
						<power>8</power>
						<cooldownTime>2.5</cooldownTime>
					</li>
				</tools>
			</li>
		</comps>
	</HediffDef>


	<HediffDef ParentName="addedPartBasic">
		<defName>HookHand</defName>
		<label>Hook hand</label>
		<labelNoun>a hook hand</labelNoun>
		<spawnThingOnRemoved>HookHand</spawnThingOnRemoved>
		<addedPartProps>
			<solid>true</solid>
			<partEfficiency>0.6</partEfficiency>
		</addedPartProps>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>hook hand</label>
						<capacities>
							<li>Cut</li>
						</capacities>
						<power>9</power>
						<cooldownTime>2</cooldownTime>
					</li>
				</tools>
			</li>
		</comps>
	</HediffDef>

	<HediffDef ParentName="addedPartBasic">
		<defName>EyePatch</defName>
		<label>eye patch</label>
		<labelNoun>an eye patch</labelNoun>
		<spawnThingOnRemoved>EyePatch</spawnThingOnRemoved>
		<addedPartProps>
			<solid>true</solid>
			<partEfficiency>0</partEfficiency>
		</addedPartProps>
		<stages>
			<li>		  
				<statOffsets>
					<SocialImpact>0.10</SocialImpact>
				</statOffsets>
			</li>
		</stages>
	</HediffDef>

	<HediffDef ParentName="addedPartBasic">
		<defName>EarBandage</defName>
		<label>ear bandage</label>
		<labelNoun>an ear bandage</labelNoun>
		<spawnThingOnRemoved>EarBandage</spawnThingOnRemoved>
		<addedPartProps>
			<solid>true</solid>
			<partEfficiency>0</partEfficiency>
		</addedPartProps>
	</HediffDef>

</Defs>