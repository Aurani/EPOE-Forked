<Defs>
	<RecipeDef ParentName="SurgeryBionic">
		<defName>InstallSimpleSpine</defName>
		<label>install replacement spine</label>
		<description>Installs a replacement spine.</description>
		<workerClass>Recipe_InstallArtificialBodyPart</workerClass>
		<jobString>Installing a replacement spine.</jobString>
		<workAmount>2000</workAmount>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Medicine</li>
					</categories>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>SimpleSpine</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Medicine</li>
			</categories>
			<thingDefs>
				<li>SimpleSpine</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>Spine</li>
		</appliedOnFixedBodyParts>
		<addsHediff>SimpleSpine</addsHediff>
	</RecipeDef>
