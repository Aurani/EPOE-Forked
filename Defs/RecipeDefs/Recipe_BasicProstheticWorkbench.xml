<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<RecipeDef Abstract="True" Name="RecipeBasicProsthesis">
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<unfinishedThingDef>UnfinishedProsthesis</unfinishedThingDef>
		<workSkill>Crafting</workSkill>
		<workAmount>2500</workAmount>
	</RecipeDef>

	<RecipeDef ParentName="RecipeBasicProsthesis">
		<defName>CreateEyePatch</defName>
		<label>Craft eye patch</label>
		<description>Tailors an eye patch from fabric.</description>
		<jobString>Crafting prosthesis.</jobString>
		<soundWorking>Recipe_Tailor</soundWorking>
		<products>
			<EyePatch>1</EyePatch>
		</products>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Textiles</li>
					</categories>
				</filter>
				<count>15</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Textiles</li>
			</categories>
		</fixedIngredientFilter>
		<researchPrerequisite>BasicProsthetics</researchPrerequisite>
	</RecipeDef>

	<RecipeDef ParentName="RecipeBasicProsthesis">
		<defName>CreateHookHand</defName>
		<label>Craft hook hand</label>
		<description>Tailors a hook hand from fabric and metal.</description>
		<jobString>Crafting prosthesis.</jobString>
		<soundWorking>Recipe_MakeWoodPlanks_Hand</soundWorking>
		<products>
			<HookHand>1</HookHand>
		</products>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>15</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>Textiles</li>
					</categories>
				</filter>
				<count>20</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Steel</li>
			</thingDefs>
			<categories>
				<li>Textiles</li>
			</categories>
		</fixedIngredientFilter>
		<researchPrerequisite>BasicProsthetics</researchPrerequisite>
	</RecipeDef>

	<RecipeDef ParentName="RecipeBasicProsthesis">
		<defName>CreateEarBandage</defName>
		<label>Craft ear bandage</label>
		<description>Tailors an ear bandage from fabric.</description>
		<jobString>Crafting prosthesis.</jobString>
		<soundWorking>Recipe_Tailor</soundWorking>
		<products>
			<EarBandage>1</EarBandage>
		</products>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Textiles</li>
					</categories>
				</filter>
				<count>15</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Textiles</li>
			</categories>
		</fixedIngredientFilter>
		<researchPrerequisite>BasicProsthetics</researchPrerequisite>
	</RecipeDef>

</Defs>