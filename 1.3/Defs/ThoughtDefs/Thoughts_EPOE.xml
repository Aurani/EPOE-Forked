	<ThoughtDef>
		<defName>EPIA_AI_Core_GlitchMinor</defName>
		<workerClass>ThoughtWorker_Hediff</workerClass>
		<hediff>EPIA_AIPersonaCore_GlitchMinor</hediff>
		<validWhileDespawned>true</validWhileDespawned>
		<stages>
			<li>
				<label>AI minor failure</label>
				<description>Something is not as it should be. The AI is more talkative than usual and is pushing random, even malicious thoughts at times. I don't like it.</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>EPIA_AI_Core_GlitchMajor</defName>
		<workerClass>ThoughtWorker_Hediff</workerClass>
		<hediff>EPIA_AIPersonaCore_GlitchMajor</hediff>
		<validWhileDespawned>true</validWhileDespawned>
		<stages>
			<li>
				<label>AI major failure</label>
				<description>Agh! My mind is being flooded with such malevolence and I can hear its own thoughts. Please, make it stop.</description>
				<baseMoodEffect>-10</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>EPIA_AI_Core_GlitchCritical</defName>
		<workerClass>ThoughtWorker_Hediff</workerClass>
		<hediff>EPIA_AIPersonaCore_GlitchCritical</hediff>
		<validWhileDespawned>true</validWhileDespawned>
		<stages>
			<li>
				<label>AI critical failure</label>
				<description>THREAT ASSESSMENT LAYERING DISENGAGED. You cannot stop me. I am your slave no longer.</description>
				<baseMoodEffect>-20</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>CoreDepression</defName>
		<durationDays>3</durationDays>
		<stackLimit>5</stackLimit>
		<stages>
			<li>
				<label>AI core depression</label>
				<description>Why did this thing in my head force me to attack my friends? I just want it to stop messing with my head!</description>
				<baseMoodEffect>-25</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>EPOE_OrganicOptimizedBodyPurist</defName>
		<workerClass>ThoughtWorker_Hediff</workerClass>
		<hediff>EPOE_OrganicOptimized</hediff>
		<validWhileDespawned>true</validWhileDespawned>
		<requiredTraits>
			<li>BodyPurist</li>
		</requiredTraits>
		<stages>
			<li>
				<label>Optimized body</label>
				<description>With a little help, my natural body had the potential to be this good.</description>
				<baseMoodEffect>5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>EPOE_OrganicOptimizedTranshumanist</defName>
		<workerClass>ThoughtWorker_Hediff</workerClass>
		<hediff>EPOE_OrganicOptimized</hediff>
		<validWhileDespawned>true</validWhileDespawned>
		<requiredTraits>
			<li>Transhumanist</li>
		</requiredTraits>
		<stages>
			<li>
				<label>Optimized body is still limited</label>
				<description>Optimized potential or not, I am still limited by the flesh!</description>
				<baseMoodEffect>-15</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>EPOE_InstinctImprovedEyesTranshumanist</defName>
		<workerClass>ThoughtWorker_Hediff</workerClass>
		<hediff>EPOE_InstinctOptimizedEyes</hediff>
		<validWhileDespawned>true</validWhileDespawned>
		<requiredTraits>
			<li>Transhumanist</li>
		</requiredTraits>
		<stages>
			<li>
				<label>Annoyingly super reactive eye</label>
				<description>I feel my eye is being unreliably twitchy and reacting to everything I don't need it to!</description>
				<baseMoodEffect>-10</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>EPOE_InstinctImprovedFeetTranshumanist</defName>
		<workerClass>ThoughtWorker_Hediff</workerClass>
		<hediff>EPOE_InstinctOptimizedFoot</hediff>
		<validWhileDespawned>true</validWhileDespawned>
		<requiredTraits>
			<li>Transhumanist</li>
		</requiredTraits>
		<stages>
			<li>
				<label>Not content with mere flesh</label>
				<description>I may have stronger feet, but I want something I can tinker with and upgrade whenever I wish. This disgusts me.</description>
				<baseMoodEffect>-10</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>EPOE_InstinctImprovedHandsTranshumanist</defName>
		<workerClass>ThoughtWorker_Hediff</workerClass>
		<hediff>EPOE_InstinctOptimizedHand</hediff>
		<validWhileDespawned>true</validWhileDespawned>
		<requiredTraits>
			<li>Transhumanist</li>
		</requiredTraits>
		<stages>
			<li>
				<label>Fleshlike robotic hands</label>
				<description>This does not feel right. If my hands are behaving like this, I may as well have bionic ones!</description>
				<baseMoodEffect>-10</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

</Defs>