<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<RecipeDef Abstract="True" Name="RecipeBasicProsthesis">
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<unfinishedThingDef>UnfinishedProsthesis</unfinishedThingDef>
		<workSkill>Crafting</workSkill>
		<workAmount>2500</workAmount>
		<researchPrerequisite>BasicProsthetics</researchPrerequisite>
	</RecipeDef>

	<RecipeDef ParentName="RecipeBasicProsthesis">
		<defName>CreateEyePatch</defName>
		<label>make eye patch</label>
		<description>Tailors an eye patch from fabric.</description>
		<jobString>Crafting prosthesis.</jobString>
		<soundWorking>Recipe_Tailor</soundWorking>
		<products>
			<EyePatch>1</EyePatch>
		</products>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Textiles</li>
					</categories>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Textiles</li>
			</categories>
		</fixedIngredientFilter>
	</RecipeDef>

	<RecipeDef ParentName="RecipeBasicProsthesis">
