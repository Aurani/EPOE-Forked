<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<RecipeDef>
		<defName>Smelt_EPOE_DamagedScytherBlade</defName>
		<label>smelt damaged scyther blade</label>
		<description>Use heat and strong electromagnets to extract useful metal from a damaged scyther blade.</description>
		<jobString>Smelting damaged scyther blade.</jobString>
		<workAmount>700</workAmount>
		<workSpeedStat>SmeltingSpeed</workSpeedStat>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Smelt</soundWorking>
		<recipeUsers>
			<li>ElectricSmelter</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>EPOE_DamagedScytherBlade</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<products>
			<Plasteel>3</Plasteel>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>EPOE_DamagedScytherBlade</li>
			</thingDefs>
		</fixedIngredientFilter>
	</RecipeDef>

	<RecipeDef>
		<defName>EPIA_ScrapProsthesis</defName>
		<label>disassemble prosthesis</label>
		<description>Scrap and disassemble unwanted prosthesis for materials.</description>
		<jobString>Disassembling prosthesis.</jobString>
		<workAmount>300</workAmount>
		<workSpeedStat>ButcheryMechanoidSpeed</workSpeedStat>
		<workSkill>Crafting</workSkill>
		<effectWorking>ButcherMechanoid</effectWorking>
		<soundWorking>Recipe_ButcherCorpseMechanoid</soundWorking>
		<recipeUsers>
			<li>TableMachining</li>
			<li>TableSimpleProsthetic</li>
		</recipeUsers>
		<specialProducts>
			<li>Smelted</li>
		</specialProducts>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>SimpleProstheses</li>
						<li>BionicProstheses</li>
						<li>AdvancedProstheses</li>
						<li>SurrogateOrgans</li>
						<li>SyntheticOrgans</li>
						<li>GlitterworldParts</li>
						<li>EPIA_OrganicOptimizer</li>
						<li>EPOE_Redundancy</li>
					</categories>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>SimpleProstheses</li>
				<li>BionicProstheses</li>
				<li>AdvancedProstheses</li>
				<li>SurrogateOrgans</li>
				<li>SyntheticOrgans</li>
				<li>GlitterworldParts</li>
				<li>EPIA_OrganicOptimizer</li>
				<li>EPOE_Redundancy</li>
			</categories>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<categories>
				<li>SimpleProstheses</li>
				<li>EPOE_Redundancy</li>
			</categories>
		</defaultIngredientFilter>
	</RecipeDef>

	<RecipeDef>
		<defName>Make_EPOE_MAAI_Chip_UseAICore</defName>
		<label>make 5 MA-AI chip from AI persona core</label>
		<description>Make 5 MA-AI chip from AI persona core.</description>
		<jobString>Making MA-AI chip.</jobString>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>EPOEAssembling</soundWorking>
		<workSkill>Crafting</workSkill>
		<skillRequirements>
			<Crafting>10</Crafting>
		</skillRequirements>
		<researchPrerequisite>AdvancedFabrication</researchPrerequisite>
		<unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
		<recipeUsers>
			<li>FabricationBench</li>
		</recipeUsers>
		<products>
			<EPOE_MAAI_Chip>5</EPOE_MAAI_Chip>
		</products>
		<workAmount>10000</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>AIPersonaCore</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Plasteel</li>
					</thingDefs>
				</filter>
				<count>20</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Gold</li>
					</thingDefs>
				</filter>
				<count>1.5</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>AIPersonaCore</li>
				<li>Steel</li>
				<li>Plasteel</li>
				<li>Gold</li>
			</thingDefs>
		</fixedIngredientFilter>
	</RecipeDef>

</Defs>