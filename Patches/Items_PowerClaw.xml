<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<Operation Class="PatchOperationSequence">
	<success>Always</success>
	<operations>
		<li Class="PatchOperationRemove">
			<xpath>Defs/ThingDef[defName="PowerClaw"]/graphicData/drawSize</xpath>
		</li>
		<!--li Class="PatchOperationRemove">
			<xpath>Defs/ThingDef[defName="PowerClaw"]/thingSetMakerTags</xpath>
		</li-->
		<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName="PowerClaw"]/description</xpath>
			<value>
				<description>Powerful hand replacement consisting of three deadly claws.</description>
			</value>
		</li>
		<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName="PowerClaw"]/graphicData/texPath</xpath>
			<value>
				<texPath>Things/Item/BodyPart/BionicPart</texPath>
			</value>
		</li>
		<li Class="PatchOperationAdd">
			<xpath>Defs/ThingDef[defName="PowerClaw"]</xpath>
			<value>
				<tradeTags>
					<li>BionicProstheses</li>
				</tradeTags>
				<thingCategories Inherit="False">
					<li>BionicProstheses</li>
				</thingCategories>
			</value>
		</li>
	</operations>
</Operation>

</Patch>