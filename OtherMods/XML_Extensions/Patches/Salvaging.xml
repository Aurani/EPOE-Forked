<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[@Name="BodyPartProstheticBase" or @Name="BodyPartBionicBase"]</xpath>
		<value>
			<smeltable>true</smeltable>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<success>Always</success>
		<xpath>Defs/ThingDef[@ParentName="BodyPartProstheticBase" and costList/ComponentIndustrial]</xpath>
		<value>
			<smeltProducts>
				<ComponentIndustrial>1</ComponentIndustrial>
			</smeltProducts>
			<smeltable>true</smeltable>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<success>Always</success>
		<xpath>Defs/ThingDef[@ParentName="BodyPartProstheticMakeableBase" and costList/ComponentIndustrial]</xpath>
		<value>
			<smeltProducts>
				<ComponentIndustrial>1</ComponentIndustrial>
			</smeltProducts>
			<smeltable>true</smeltable>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<success>Always</success>
		<xpath>Defs/ThingDef[@ParentName="EPIASurrogateBase" and costList/ComponentIndustrial]</xpath>
		<value>
			<smeltProducts>
				<ComponentIndustrial>1</ComponentIndustrial>
			</smeltProducts>
			<smeltable>true</smeltable>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<success>Always</success>
		<xpath>Defs/ThingDef[@ParentName="BodyPartProstheticImperialBase" and costList/ComponentIndustrial]</xpath>
		<value>
			<smeltProducts>
				<ComponentIndustrial>1</ComponentIndustrial>
			</smeltProducts>
			<smeltable>true</smeltable>
		</value>
	</Operation>

</Patch>